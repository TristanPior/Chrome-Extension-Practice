{
    "manifest_version": 2,
    "name": "Underline Hovered Text",
    "description": "Underlines the text hovered over.",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "images/underline.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["core.css"],
            "js": ["core.js"],
            "run_at": "document_end"
        }
    ]
}